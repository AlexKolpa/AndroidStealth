<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/MyActionBar</item>
		<item name="android:actionBarSplitStyle">@style/MyActionBarSplit</item>
		<item name="android:actionModeStyle">@style/MyActionBarCAB</item>
		<!-- <item name="android:actionModeSplitBackground">@drawable/actionbar_background</item> -->
		<!-- Support library compatibility -->
		<item name="actionBarStyle">@style/MyActionBar</item>
	</style>

	<style name="Title">
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textColor">@color/accent</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SubTitle">
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/accent</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="EditText">
		<item name="android:background">@drawable/frame_input_states</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/base</item>
		<item name="android:paddingLeft">@dimen/default_medium_padding</item>
		<item name="android:paddingRight">@dimen/default_medium_padding</item>
		<item name="android:paddingTop">@dimen/default_small_padding</item>
		<item name="android:paddingBottom">@dimen/default_small_padding</item>

	</style>

	<style name="RegularText">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/base</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="Checkbox">
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/accent</item>
		<item name="android:paddingLeft">@dimen/default_medium_padding</item>
		<item name="android:textStyle">italic</item>
	</style>

	<!-- ActionBar styles -->
	<style name="MyActionBar"
		parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<!-- <item name="android:background">@drawable/actionbar_background</item> -->
		<!-- Support library compatibility -->
		<!-- <item name="background">@drawable/actionbar_background</item> -->
	</style>
		<style name="MyActionBarSplit"
			parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<!-- <item name="android:background">@drawable/actionbar_background</item> -->
		<!-- Support library compatibility -->
		<!-- <item name="background">@drawable/actionbar_background</item> -->
	</style>
	<style name="MyActionBarCAB"
		parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<!-- <item name="android:background">@drawable/actionbar_cab_background</item> -->
		<!-- Support library compatibility -->
		<!-- <item name="background">@drawable/actionbar_cab_background</item> -->
	</style>

	<style name="ButtonBarButton">
	</style>

	<style name="ButtonBar" parent="@android:style/ButtonBar">
	</style>

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light">
		<!-- API 14 theme customizations can go here. -->
	</style>

	<style name="PinButtonAction">
		<item name="android:background">@drawable/pin_button_dialer</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:minHeight">60dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="PinButtonContainer" parent="PinButtonAction">
		<item name="android:orientation">vertical</item>
		<item name="android:clickable">true</item>
	</style>
	<style name="PinButtonTitleText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="PinButtonSubText" parent="PinButtonTitleText">
		<item name="android:layout_marginTop">-2dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#777</item>
	</style>

	<style name="AppTheme.Dialog" parent="android:Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:maxWidth">600dp</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
	</style>
</resources>
