<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonBarButton">
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="PinButtonAction">
        <item name="android:background">@drawable/pin_button_dialer</item>
        <item name="android:padding">7dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PinButtonContainer" parent="PinButtonAction">
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="PinButtonTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="PinButtonSubText" parent="PinButtonTitleText">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>
